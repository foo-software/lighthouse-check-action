{
  "name": "lighthouse-check-action",
  "version": "8.0.0",
  "description": "A GitHub Action for running multiple Lighthouse audits automatically in a workflow with a rich set of bonus features.",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:js",
    "build:js": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "clean": "rimraf dist",
    "jest": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "npm run jest",
    "test:headers": "ts-node src/test/headerServer.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foo-software/lighthouse-check-action.git"
  },
  "author": "Adam Henson <adamhenson1979@gmail.com> (https://github.com/adamhenson)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foo-software/lighthouse-check-action/issues"
  },
  "homepage": "https://github.com/foo-software/lighthouse-check-action#readme",
  "keywords": [
    "github actions",
    "actions",
    "github",
    "lighthouse",
    "google",
    "cli",
    "performance",
    "accessibility",
    "seo",
    "progressive web app",
    "best practices",
    "website performance monitoring",
    "foo",
    "foo.software"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --single-quote --write",
      "npm run lint"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@foo-software/lighthouse-check": "^6.0.2",
    "express": "^4.17.1",
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/lodash.get": "^4.4.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "husky": "^4.2.5",
    "jest": "^27.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
