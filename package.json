{
  "name": "lighthouse-check-action",
  "version": "4.0.0",
  "description": "A GitHub Action for running multiple Lighthouse audits automatically in a workflow with a rich set of bonus features.",
  "main": "compiled/index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:compile",
    "build:compile": "ncc build dist/index.js --license licenses.txt --out compiled",
    "build:js": "npm run clean && tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "clean": "rimraf dist compiled",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:headers": "ts-node src/test/headerServer.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foo-software/lighthouse-check-action.git"
  },
  "author": "Adam Henson <adamhenson1979@gmail.com> (https://github.com/adamhenson)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foo-software/lighthouse-check-action/issues"
  },
  "homepage": "https://github.com/foo-software/lighthouse-check-action#readme",
  "keywords": [
    "github actions",
    "actions",
    "github",
    "lighthouse",
    "google",
    "cli",
    "performance",
    "accessibility",
    "seo",
    "progressive web app",
    "best practices",
    "website performance monitoring",
    "foo",
    "foo.software"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@foo-software/lighthouse-check": "^4.0.2",
    "express": "^4.17.1",
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/lodash.get": "^4.4.6",
    "@vercel/ncc": "^0.31.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
